<Window x:Class="WpfAppLessonWPF17_Color.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppLessonWPF17_Color"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <local:ColorRGBSlider x:Name="myColorRGBSlider" Width="200" Height="100" ColorChangedColorRGBSlider="myColorRGBSlider_ColorChangedColorRGBSlider">
        </local:ColorRGBSlider>
        <Ellipse x:Name="elps" Height="100" Width="100"
                 Grid.Column="1" 
                 Stroke="Red"/>

    </Grid>
</Window>
